@model List<ApplicationLayer.Dtos.ProductDtos.GetAllForGrid_ProductDto>

<a asp-controller="Product" asp-action="Create" class="btn btn-primary">Create</a>

<br />

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>UnitPrice</th>
        <th>Price</th>
        <th>Category</th>
        <th>Commands</th>
    </tr>
    @foreach(var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Title</td>
            <td>@product.UnitPrice</td>
            <td>@product.Price</td>
            <td>@product.ProductCategoryTitle</td>
            <td>
                <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id" class="btn btn-primary">Detail</a>
                <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>